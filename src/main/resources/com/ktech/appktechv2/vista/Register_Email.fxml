<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" spacing="10" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ktech.appktechv2.controlador.Register_EmailController">
   <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
   </padding>
   <children>
      <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Registro de Email" />
      <TextField fx:id="correoField" maxWidth="250.0" promptText="Correo Electrónico" />
      <TextField fx:id="passwordField" maxWidth="250.0" promptText="Contraseña de Usuario" />
      <Button fx:id="btnGuardar" onAction="#handleGuardar" text="Guardar" />
      <Button fx:id="btnEditar" onAction="#handleEditar" text="Editar" />
      <Label fx:id="errorLabel" textFill="RED" />
   </children>
</VBox>
