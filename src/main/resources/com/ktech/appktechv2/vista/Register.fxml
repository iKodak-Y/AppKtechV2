<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="371.0" prefWidth="409.0" spacing="10" stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/22" fx:controller="com.ktech.appktechv2.controlador.RegisterController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <Label style="-fx-font-size: 30px; -fx-font-weight: bold;" text="Registro de Usuario" />
    
    <TextField fx:id="nombreField" maxWidth="250.0" promptText="Nombre Completo" />
    <TextField fx:id="usernameField" maxWidth="250.0" promptText="Usuario" />
    <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Contraseña" />
    <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" promptText="Confirmar Contraseña" />
    
    <Button onAction="#handleRegister" text="Registrarse" />
    <Button onAction="#backToLogin" text="Volver al Login" />
    
    <Label fx:id="errorLabel" textFill="RED" />
</VBox>
